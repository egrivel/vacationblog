<phpunit colors="false">
    <testsuite name="Blog tests">
        <directory>unittest/</directory>
    </testsuite>

    <filter>
        <whitelist>
            <directory suffix=".php">site/</directory>
        </whitelist>
    </filter>

    <logging>
        <log type="coverage-html" target="./coverage/codeCoverage" charset="UTF-8"
            yui="true" highlight="true"
            lowUpperBound="50" highLowerBound="80"/>
        <log type="testdox-html" target="./coverage/testdox.html" />
    </logging>
</phpunit>
